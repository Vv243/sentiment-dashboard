# API Configuration
API_HOST=0.0.0.0
API_PORT=8000
DEBUG=True
API_V1_PREFIX=/api/v1

# Database
MONGODB_URL=mongodb://localhost:27017
DATABASE_NAME=sentiment_db

# Redis
REDIS_URL=redis://localhost:6379/0

# Twitter API (Option 1 - Choose this OR Reddit)
TWITTER_API_KEY=your_twitter_api_key
TWITTER_API_SECRET=your_twitter_api_secret
TWITTER_ACCESS_TOKEN=your_twitter_access_token
TWITTER_ACCESS_SECRET=your_twitter_access_secret
TWITTER_BEARER_TOKEN=your_twitter_bearer_token

# Reddit API (Option 2 - Choose this OR Twitter)
REDDIT_CLIENT_ID=your_reddit_client_id
REDDIT_CLIENT_SECRET=your_reddit_client_secret
REDDIT_USER_AGENT=sentiment_analyzer_v1.0

# Data Collection Settings
COLLECTION_INTERVAL=300  # seconds (5 minutes)
MAX_POSTS_PER_COLLECTION=100
DATA_RETENTION_DAYS=30

# Sentiment Analysis
USE_VADER=True
USE_FINBERT=False  # Set to True if you have GPU/enough RAM
FINBERT_MODEL=ProsusAI/finbert

# CORS
CORS_ORIGINS=http://localhost:3000,http://localhost:3001

# Security
SECRET_KEY=your-secret-key-change-this-in-production
ALGORITHM=HS256
